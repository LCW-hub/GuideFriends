<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- BottomSheet 애니메이션 스타일 -->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetAnimation</item>
    </style>

    <!-- BottomSheet 애니메이션 -->
    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- 스피너 스타일 TimePicker 다이얼로그 (아이폰 스타일) -->
    <style name="SpinnerTimePickerDialog" parent="android:Theme.Material.Light.Dialog">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>
</resources>
