            android:visibility="gone"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            app:tint="@color/colorPrimary"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:layout_constraintTop_toTopOf="@id/btnMainMenu"
