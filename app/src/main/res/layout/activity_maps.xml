                    android:maxLines="1"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    android:textSize="15sp"
                    android:textColorHint="@color/textHint" />

                <ImageView
                    android:id="@+id/iv_search_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/fab_gradient_background"
                    android:clickable="true"
                    android:contentDescription="@string/desc_search_button"
                    android:focusable="true"
                    android:padding="12dp"
                    android:src="@drawable/ic_search"
                    app:tint="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_group_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_menu"
            app:fabSize="mini"
            app:backgroundTint="@color/white"
            app:tint="@color/colorPrimary"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:layout_constraintEnd_toEndOf="@id/search_card"
            app:layout_constraintTop_toBottomOf="@id/search_card"
            android:visibility="gone"
            tools:visibility="visible"
            android:contentDescription="ê·¸ë£¹ ë©”ë‰´" />

        <androidx.cardview.widget.CardView
            android:id="@+id/group_menu_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/fab_group_menu"
            app:layout_constraintTop_toBottomOf="@id/fab_group_menu"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:minWidth="220dp"
                android:background="@drawable/gradient_menu_background">

                <!-- ì±„íŒ…ë°© ë²„íŠ¼ -->
                <LinearLayout
                    android:id="@+id/btn_menu_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_menu_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chat"
                        app:tint="@color/colorPrimary"
                        android:layout_marginEnd="14dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ì±„íŒ…ë°©"
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/textSecondary" />
                </LinearLayout>

                <!-- ìœ„ì¹˜ê³µìœ  on/off ë²„íŠ¼ -->
                <LinearLayout
                    android:id="@+id/btn_menu_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_menu_button"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_my_location"
                        app:tint="@color/colorPrimary"
                        android:layout_marginEnd="14dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ìœ„ì¹˜ê³µìœ "
                        android:textColor="@color/textPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/switch_location_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@drawable/switch_thumb"
                        android:trackTint="@drawable/switch_track"
                        android:checked="true"
                        android:paddingStart="8dp" />
                </LinearLayout>

                <!-- ìœ„ì¹˜ê¶Œí•œì„¤ì • ë²„íŠ¼ -->
