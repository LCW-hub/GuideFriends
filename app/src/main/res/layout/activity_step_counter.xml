<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="16dp">

    <!-- 상단 툴바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="만보기 &amp; 거리 측정"
        app:titleTextColor="@android:color/white" />

    <!-- 메인 정보 카드 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/colorCard"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 걸음 수 (큰 글씨) -->
            <TextView
                android:id="@+id/tv_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="걸음 수: 0 걸음"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- 거리 -->
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="거리: 0.00 km"
                android:textSize="24sp"
                android:textColor="@color/textColorPrimary"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- 칼로리 -->
            <TextView
                android:id="@+id/tv_calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="칼로리: 0.0 kcal"
                android:textSize="20sp"
                android:textColor="@color/textColorSecondary"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- 시간 -->
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시간: 00:00:00"
                android:textSize="18sp"
                android:textColor="@color/textColorSecondary"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- 페이스 -->
            <TextView
                android:id="@+id/tv_pace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="페이스: 0.0 분/km"
                android:textSize="18sp"
                android:textColor="@color/textColorSecondary"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center">

        <!-- 시작 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="시작"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textStart"
            app:cornerRadius="25dp"
            app:backgroundTint="@color/colorButton" />

        <!-- 중지 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="중지"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_media_pause"
            app:iconGravity="textStart"
            app:cornerRadius="25dp"
            app:backgroundTint="@color/colorAccent" />

    </LinearLayout>

    <!-- 리셋 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="데이터 초기화"
        android:textSize="16sp"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconGravity="textStart"
        app:cornerRadius="25dp"
        app:backgroundTint="@color/colorSecondary"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <!-- 정보 카드 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/colorInfo"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💡 사용법"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• '시작' 버튼을 눌러 산책 추적을 시작하세요\n• 걸음 수는 자동으로 카운트됩니다\n• GPS를 통해 정확한 거리를 측정합니다\n• 칼로리와 페이스도 자동 계산됩니다"
                android:textSize="14sp"
                android:textColor="@color/textColorSecondary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
