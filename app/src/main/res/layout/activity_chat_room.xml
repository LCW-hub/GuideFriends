<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EDF5"
    tools:context=".activities.ChatRoomActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarChat"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_gradient"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        tools:title="그룹 이름" />

    <!-- 메시지 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarChat"
        android:layout_above="@id/layoutMessageInput"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"/>

    <!-- 메시지 입력 영역 -->
    <LinearLayout
        android:id="@+id/layoutMessageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <!-- 메시지 입력창 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F5F3FF">

            <EditText
                android:id="@+id/etMessageInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                android:maxHeight="120dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:hint="메시지를 입력하세요..."
                android:textSize="15sp"
                android:textColorHint="@color/textHint"
                android:textColor="@color/textPrimary"
                android:background="@android:color/transparent"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:inputType="textMultiLine|textCapSentences"/>
        </androidx.cardview.widget.CardView>

        <!-- 전송 버튼 -->
        <ImageView
            android:id="@+id/btnSend"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@android:drawable/ic_menu_send"
            android:background="@drawable/fab_gradient_background"
            android:tint="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="전송" />

    </LinearLayout>

</RelativeLayout>