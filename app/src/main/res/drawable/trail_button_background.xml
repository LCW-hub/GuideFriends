<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorButtonPressed" />
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="@color/trailLightGreen" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="@color/colorButton"
                android:endColor="@color/trailGreen"
                android:type="linear" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="@color/trailLightGreen" />
        </shape>
    </item>
</selector> 
