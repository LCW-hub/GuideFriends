<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/springMint"
                android:endColor="@color/springGreen"
                android:angle="90" />
            <corners android:radius="25dp" />
            <stroke android:width="2dp" android:color="@color/springGreen" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/springSky"
                android:endColor="@color/springBlue"
                android:angle="90" />
            <corners android:radius="25dp" />
            <stroke android:width="2dp" android:color="@color/springBlue" />
        </shape>
    </item>
</selector>
