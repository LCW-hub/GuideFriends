<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 -->
    <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    
    <!-- 메인 버튼 그라데이션 -->
    <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/colorPrimary"
                android:centerColor="#9F67FF"
                android:endColor="@color/wichinPink"
                android:type="linear" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    
    <!-- 상단 하이라이트 -->
    <item android:top="0dp" android:left="0dp" android:right="2dp" android:bottom="40dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:topLeftRadius="32dp" android:topRightRadius="32dp" />
        </shape>
    </item>
</layer-list>

