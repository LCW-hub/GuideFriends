<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 외부 그림자 -->
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="oval">
            <solid android:color="#40000000" />
            <size android:width="52dp" android:height="52dp" />
        </shape>
    </item>
    
    <!-- 그라데이션 배경 -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#10B981"
                android:endColor="#059669"
                android:angle="135" />
            <size android:width="52dp" android:height="52dp" />
        </shape>
    </item>
    
    <!-- 하얀 테두리 -->
    <item android:top="4dp" android:bottom="6dp" 
          android:left="4dp" android:right="6dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- 산 아이콘 -->
    <item android:top="14dp" android:bottom="16dp" 
          android:left="14dp" android:right="16dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#10B981"
                android:endColor="#059669"
                android:angle="135" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list> 
