<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#C4B5FD"
                android:centerColor="#DDD6FE"
                android:endColor="#E9D5FF"
                android:angle="135" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#DDD6FE"
                android:centerColor="#E9D5FF"
                android:endColor="#F3E8FF"
                android:angle="135" />
            <corners android:radius="28dp" />
        </shape>
    </item>
</selector>
