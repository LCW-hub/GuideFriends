<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 외부 글로우 효과 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#30A78BFA"
                android:centerColor="#20C4B5FD"
                android:endColor="#30EC4899"
                android:type="linear" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- 메인 카드 (유리 효과) -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5FFFFFF" />
            <corners android:radius="22dp" />
            <stroke
                android:width="1dp"
                android:color="#30A78BFA" />
        </shape>
    </item>
</layer-list>

