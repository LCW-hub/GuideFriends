<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient background -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#EDE9FE"
                android:centerColor="#A78BFA"
                android:endColor="#7C3AED"
                android:type="linear" />
        </shape>
    </item>

    <!-- Light cloud effect -->
    <item android:top="30dp">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#40FFFFFF"
                android:centerColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Bottom purple gradient effect -->
    <item android:top="120dp">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#00A78BFA"
                android:centerColor="#40A78BFA"
                android:endColor="#808B5CF6"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
