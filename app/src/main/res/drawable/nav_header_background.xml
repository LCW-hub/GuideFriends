<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient background -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#E3F2FD"
                android:centerColor="#90CAF9"
                android:endColor="#42A5F5"
                android:type="linear" />
        </shape>
    </item>

    <!-- Light cloud effect -->
    <item android:top="30dp">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#40FFFFFF"
                android:centerColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Bottom green gradient (nature touch) -->
    <item android:top="120dp">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#0081C784"
                android:centerColor="#4081C784"
                android:endColor="#8066BB6A"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
